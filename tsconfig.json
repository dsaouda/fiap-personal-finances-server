{

    "compilerOptions": {
        "target": "es6",
        "outDir": "dist/",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "inlineSources": true,
        "newLine": "LF"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
